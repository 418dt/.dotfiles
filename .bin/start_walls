#!/bin/bash

id=37913582
timer=15m
resolution=1920x1080
internet_status=offline

while [ $internet_status = "offline" ]
do
	if ping -q -c 1 -W 1 8.8.8.8 >/dev/null; then
	  internet_status="online"
	fi
done

while true
do
	wget https://source.unsplash.com/collection/${id}/${resolution} -O ~/.cache/wall
	feh --no-fehbg --bg-scale ~/.cache/wall
	sleep ${timer}
done
